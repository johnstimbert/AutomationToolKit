@using Banner.Foundation.Dictionary.Extensions
@using Banner.Foundation.SitecoreExtensions;
@using Banner.Project.Common.Areas.Cards.Models
@{
    if (Model == null)
    {
        return;
    }
}
<div uatid="@FieldExtensions.UATID" class="shell-card bg-primary background-pattern-dotted-bottom" data-js="animate-background">
    <div class="container">
        <form class="form-row">
            <div class="col-12 mb-5 center-content">
                <h3 class="shell-card-title text-center">
                    @if (!MvcHtmlString.IsNullOrEmpty(Model.Title))
                    {
                        <b>@Model.Title</b>
                    }
                </h3>
            </div>
            <div class="form-group col-12 mb-5 col-lg-8">
                <label class="top" for="typeaheadInput">@Html.Raw(Html.Sitecore().Dictionary("/sitecore/content/BH/BH Global/Dictionary/SearchModal/WithIn Miles", "Within 10 miles of:"))</label>
                <input id="txt-center-search-shell-card-link" type="text" class="form-control dropdown-toggle typeahead-input shell-card-input" data-js="input-text-google-autocomplete" data-toggle="dropdown" placeholder="@Html.Raw(Html.Sitecore().Dictionary("/sitecore/content/BH/BH Global/Dictionary/Features/Location/Enter city or ZIP code", "Enter City or ZIPCode"))" if="typeaheadInput">
            </div>
            <div class="form-group  mb-5 col-4">
                <button type="submit" class="btn btn-primary shell-card-btn mb-2">
                    <b><svg class="svg-inline--fa fa-search fa-w-16" aria-hidden="true" data-prefix="fa" data-icon="search" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" data-fa-i2svg=""><path fill="currentColor" d="M505 442.7L405.3 343c-4.5-4.5-10.6-7-17-7H372c27.6-35.3 44-79.7 44-128C416 93.1 322.9 0 208 0S0 93.1 0 208s93.1 208 208 208c48.3 0 92.7-16.4 128-44v16.3c0 6.4 2.5 12.5 7 17l99.7 99.7c9.4 9.4 24.6 9.4 33.9 0l28.3-28.3c9.4-9.4 9.4-24.6.1-34zM208 336c-70.7 0-128-57.2-128-128 0-70.7 57.2-128 128-128 70.7 0 128 57.2 128 128 0 70.7-57.2 128-128 128z"></path></svg>&nbsp;&nbsp;@Html.Raw(Html.Sitecore().Dictionary("/sitecore/content/BH/BH Global/Dictionary/SearchModal/Find", "Find"))</b>
                </button>
            </div>
            <div class="col-12 mb-5">
                <a href="javascript:" class="shell-card-link current-location" data-target="shell-card-input" id="center-search-shell-card-link">
                    <b><svg class="svg-inline--fa fa-location-arrow fa-w-16" aria-hidden="true" data-prefix="fa" data-icon="location-arrow" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" data-fa-i2svg=""><path fill="currentColor" d="M444.52 3.52L28.74 195.42c-47.97 22.39-31.98 92.75 19.19 92.75h175.91v175.91c0 51.17 70.36 67.17 92.75 19.19l191.9-415.78c15.99-38.39-25.59-79.97-63.97-63.97z"></path></svg>&nbsp;@Html.Raw(Html.Sitecore().Dictionary("/sitecore/content/BH/BH Global/Dictionary/SearchModal/Current Location", "Use Current location"))</b>
                </a>
            </div>
            @if (!MvcHtmlString.IsNullOrEmpty(Model.SecondaryContent))
            {
                <b>@Model.SecondaryContent</b>
            }
        </form>
    </div>
    <!-- OPTIONAL -->
    @if (!MvcHtmlString.IsNullOrEmpty(Model.ImageURL))
    {
        <div class="icon-svg">

            <b>@Model.ImageURL</b>
        </div>
    }
</div>

